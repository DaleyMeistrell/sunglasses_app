<div>
	<div class="show-text"><h1>The <%= @product.name if @product %> sunglasses</h1></div>
</div>

	<br>

	<br>

<div>
	<div class="show-text">Price: <%= @product.price if @product %></div>
</div>

	<br>

<div>
	<div class="show-text"><%= image_tag @product.image.url(:large) %></div>
</div>

<div>
	<div class="show-text"><%= link_to "Back to Product List", products_path %></div>
</div>	

	<br>

<div>
	<div class="show-text"><%= link_to "Edit This Product", edit_product_path %></div>
</div>

	<br>

<div>
	<div class="show-text"><%= link_to "Delete This Product", product_path(@product), method: :delete, data: { confirm: "Are you sure you want to delete this product?"} %> </div>
</div>
	
<br>

<!-- This is my comments view section -->



<h2>Comments</h2>
<% @product.comments.each do |comment| %>
	<p>
		<strong>Commenter:</strong>
		<%= comment.commenter %>
			</p>
			<p>
		<strong>Comment:</strong>
		<%= comment.body %>
	</p>
<% end %>

 
<h2>Add a comment:</h2>
<%= form_for([@product, @product.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
 
<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>

